{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "module": "es6",
    "lib": ["DOM", "ES2021"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "module": "node16",
  "moduleResolution": "node16",
  "moduleDetection": "force",
  "target": "ES2021",
  "lib": [
    "DOM",
    "DOM.Iterable",
    "ES2021"
  ],
  "allowSyntheticDefaultImports": true,
  "resolveJsonModule": false,
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}