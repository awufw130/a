{
  "compilerOptions": {
    "target": "es6",
//    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "moduleResolution": "node16"
  },
  "module": "node16",
  "moduleResolution": "node16",
  "moduleDetection": "force",
  "target": "ES2020",
  "lib": [
    "DOM",
    "DOM.Iterable",
    "ES2020"
  ],
  "allowSyntheticDefaultImports": true,
  "resolveJsonModule": false,
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}